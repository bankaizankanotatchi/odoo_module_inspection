<odoo>
  <template id="report_etiquette_verification_extincteur_template">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="etiquette">
        <div class="page" style="padding:20px; border:1px solid #000; width:80mm; height:50mm;">
          <h2 style="text-align:center; font-size:16px;">Étiquette Extincteur</h2>
          <p><b>N° Extincteur :</b> <t t-esc="etiquette.numero_etiquette"/></p>
          <p><b>Code :</b> <t t-esc="etiquette.code_etiquette"/></p>
          <p><b>Type :</b> <t t-esc="etiquette.equipement_type"/></p>
          <p><b>Date :</b> <t t-esc="etiquette.date_generation"/></p>
          <div style="text-align:center; margin-top:10px;">
            <img t-att-src="'data:image/png;base64,%s' % etiquette.qr_code" width="80" height="80"/>
          </div>
        </div>
      </t>
    </t>
  </template>
</odoo>
