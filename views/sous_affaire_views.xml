<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue liste des sous-affaires AVEC BADGES COLOR√âS POUR STATUT -->
    <record id="view_sous_affaire_tree" model="ir.ui.view">
        <field name="name">kes_inspections.sous_affaire.list</field>
        <field name="model">kes_inspections.sous_affaire</field>
        <field name="arch" type="xml">
            <list string="Sous-affaires d'Inspection">
                <field name="name" string="R√©f√©rence"/>
                 <field name="description" string="Description"/>
                <field name="date_creation" string="Date cr√©ation"/>
                <field name="state" string="Statut" widget="badge" 
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'in_progress'"
                       decoration-success="state == 'done'"/>
            </list>
        </field>
    </record>

    <!-- Vue Kanban SANS REGROUPEMENT - Disposition horizontale libre -->
    <record id="view_sous_affaire_kanban" model="ir.ui.view">
        <field name="name">kes_inspections.sous_affaire.kanban</field>
        <field name="model">kes_inspections.sous_affaire</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="affaire_id"/>
                <field name="date_creation"/>
                <field name="state"/>
                <field name="description"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click" style="margin: 10px;">
                            <div class="o_kanban_card_header">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <span class="float-end">
                                    <span t-if="record.state.raw_value == 'draft'" 
                                          class="badge rounded-pill text-bg-info">Brouillon</span>
                                    <span t-if="record.state.raw_value == 'in_progress'" 
                                          class="badge rounded-pill text-bg-warning">En cours</span>
                                    <span t-if="record.state.raw_value == 'done'" 
                                          class="badge rounded-pill text-bg-success">Termin√©</span>
                                </span>
                            </div>
                            <div class="o_kanban_card_body">
                                <div class="o_kanban_record_subtitle mb-2">
                                    <i class="fa fa-folder-open"/> <field name="affaire_id"/>
                                </div>
                                <div class="mb-1">
                                    <i class="fa fa-calendar"/> <field name="date_creation"/>
                                </div>
                                <div class="mb-1" t-if="record.description.raw_value">
                                    <i class="fa fa-file-text-o"/> <field name="description"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue formulaire SOUS-AFFAIRE AVEC NOTEBOOK COMPLET -->
    <record id="view_sous_affaire_form" model="ir.ui.view">
        <field name="name">kes_inspections.sous_affaire.form</field>
        <field name="model">kes_inspections.sous_affaire</field>
        <field name="arch" type="xml">
            <form string="Sous-affaire d'Inspection">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                    <button name="action_voir_inspecteurs" type="object" class="oe_stat_button" icon="fa-users">
                        <field name="inspecteur_count" widget="statinfo" string="Inspecteurs"/>
                    </button>
                    <button name="action_voir_etiquettes" type="object" class="oe_stat_button" icon="fa-tags">
                        <field name="etiquette_count" widget="statinfo" string="√âtiquettes"/>
                    </button>
                    <button name="action_voir_rapports" type="object" class="oe_stat_button" icon="fa-file-pdf-o">
                        <field name="rapport_count" widget="statinfo" string="Rapports"/>
                    </button>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="affaire_id" readonly="1"/>
                            <field name="charge_affaire_principal" readonly="1" string="Charg√© d'affaire principal"/>
                        </group>
                        <group>
                            <field name="date_creation" readonly="1"/>
                            <field name="state"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Description d√©taill√©e de la sous-affaire..." nolabel="1"/>
                    </group>

                    <!-- NOTEBOOK COMPLET AVEC 7 ONGLETS -->
                    <notebook>
                        <!-- üîπ Onglet 1: Inspecteurs -->
                        <page string="Inspecteurs">
                            <field name="inspecteur_ids" context="{'default_sous_affaire_id': id}" editable="bottom">
                                <list string="Inspecteurs assign√©s">
                                    <field name="inspecteur_id" string="Inspecteur" options="{'no_create': True}"/>
                                    <field name="role" string="R√¥le"/>
                                </list>
                                <form string="Assignation d'inspecteur">
                                    <sheet>
                                        <group>
                                            <field name="inspecteur_id" required="1" options="{'no_create': True}"/>
                                            <field name="role" required="1"/>
                                            <field name="nom_complet" readonly="1"/>
                                            <field name="poste" readonly="1"/>
                                        </group>
                                        <footer>
                                            <button string="Enregistrer" type="object" special="save" class="btn-primary"/>
                                            <button string="Annuler" class="btn-secondary" special="cancel"/>
                                        </footer>
                                    </sheet>
                                </form>
                            </field>
                        </page>

                        <!-- üîπ Onglet 2: R√©sum√© -->
                        <page string="R√©sum√©">
                            <group>
                                <group string="Informations client">
                                    <field name="point_focal_client_id" string="Point focal client"/>
                                    <field name="site_intervention" readonly="1" string="Site d'intervention"/>
                                    <field name="lieu_intervention" readonly="1" string="Lieu d'intervention"/>
                                </group>
                                <group string="Description de la mission">
                                    <field name="description_mission" nolabel="1" placeholder="D√©crire en d√©tail la mission √† r√©aliser..." style="height: 200px;"/>
                                </group>
                            </group>
                        </page>

                       <!-- üîπ Onglet 3: √âtiquettes -->
                        <page string="√âtiquettes">
                            <group string="G√©n√©ration d'√©tiquettes par produit">
                                <div class="alert alert-info" role="alert" style="margin-left: 15px;">
                                    <strong>Instructions :</strong> 
                                    S√©lectionnez les produits et d√©finissez le nombre d'√©tiquettes √† g√©n√©rer pour chacun.
                                    Les √©tiquettes seront cr√©√©es avec des codes uniques bas√©s sur le produit.
                                </div>
                                
                                <field name="produit_etiquette_ids" context="{'default_sous_affaire_id': id}" editable="bottom">
                                    <list string="Produits de la commande">
                                        <field name="product_id" string="Produit" required="1"/>
                                        <field name="nombre_etiquettes" string="Nombre d'√©tiquettes" required="1"/>
                                        <field name="etiquette_count" string="√âtiquettes g√©n√©r√©es" readonly="1"/>
                                        <field name="etiquettes_generes" string="Statut" readonly="1"/>
                                        
                                        <button name="action_generer_etiquettes" type="object" string="G√©n√©rer" class="btn-primary"/>
                                        <button name="action_voir_etiquettes" type="object" string="Voir √©tiquettes" class="btn-secondary"/>
                                    </list>
                                    
                                    <form string="Configuration produit">
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="product_id" required="1" options="{'no_create': True}"/>
                                                    <field name="nombre_etiquettes" required="1"/>
                                                </group>
                                                <group>
                                                    <field name="etiquette_count" readonly="1"/>
                                                    <field name="etiquettes_generes" readonly="1"/>
                                                </group>
                                            </group>
                                            <footer>
                                                <button string="G√©n√©rer les √©tiquettes" name="action_generer_etiquettes" type="object" class="btn-primary"/>
                                                <button string="Voir les √©tiquettes" name="action_voir_etiquettes" type="object" class="btn-secondary"/>
                                            </footer>
                                        </sheet>
                                    </form>
                                </field>
                                
                                <group>
                                    <button name="action_generer_toutes_etiquettes" type="object" string="G√©n√©rer toutes les √©tiquettes" class="btn-primary"/>
                                    <button name="action_download_all_etiquettes" type="object" string="T√©l√©charger toutes en ZIP" class="btn-secondary"/>
                                </group>
                            </group>
                            
                            <group string="√âtiquettes g√©n√©r√©es (vue globale)">
                                <field name="etiquette_ids" readonly="1">
                                    <list>
                                        <field name="code_etiquette" string="Code unique"/>
                                        <field name="product_id" string="Produit" related="sous_affaire_produit_id.product_id"/>
                                        <field name='numero_etiquette' string="Num√©ro"/>
                                        <field name="date_generation" string="Date g√©n√©ration"/>
                                        <button name="print_etiquette" type="object" string="Imprimer" class="btn-secondary"/>
                                    </list>
                                </field>
                            </group>
                        </page>

                        <!-- üîπ Onglet 4: Rapports -->
                        <page string="Rapports">
                            <group>
                                <group string="Rapport">
                                    <field name="rapport_ids" context="{'default_sous_affaire_id': id}" editable="bottom">
                                        <list string="Rapports PDF/Word">
                                            <field name="filename"/>
                                            <field name="file_type" string="Type"/>
                                            <field name="date_upload"/>
                                            <button name="action_download" type="object" string="T√©l√©charger" class="btn-secondary"/>
                                        </list>
                                        <form string="Rapport">
                                            <sheet>
                                                <group>
                                                    <field name="filename"/>
                                                    <field name="file_type" invisible="1"/>
                                                    <field name="file" widget="binary" filename="filename"/>
                                                </group>
                                                <footer>
                                                    <button string="Enregistrer" type="object" special="save" class="btn-primary"/>
                                                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                                                </footer>
                                            </sheet>
                                        </form>
                                    </field>
                                </group>
                            </group>
                        </page>

                        <!-- üîπ Onglet 5: Bon de commande -->
                        <page string="Bon de commande">
                            <group>
                                <group string="Bon de commande">
                                    <field name="bond_commande_ids"
                                        context="{'default_sous_affaire_id': id}"
                                        editable="bottom">
                                        <list string="Bons de commande">
                                            <field name="bond_commande_filename" string="Nom du fichier"/>
                                            <field name="date_upload" string="Date d'envoi"/>
                                            <button name="action_download_bond_commande" type="object" string="T√©l√©charger" class="btn-secondary"/>
                                        </list>
                                        <form string="Bon de commande">
                                            <sheet>
                                                <group>
                                                    <field name="bond_commande_filename" string="Nom du fichier"/>
                                                    <field name="bond_commande_file" widget="binary" filename="bond_commande_filename" string="Fichier bon de commande"/>
                                                </group>
                                                <footer>
                                                    <button string="Enregistrer" type="object" special="save" class="btn-primary"/>
                                                    <button string="Annuler" special="cancel" class="btn-secondary"/>
                                                </footer>
                                            </sheet>
                                        </form>
                                    </field>
                                </group>
                            </group>
                        </page>

                        <!-- üîπ Onglet 6: PV -->
                        <page string="PV">
                            <group>
                                <group string="Proc√®s-verbal">
                                    <field name="pv_ids"
                                        context="{'default_sous_affaire_id': id}"
                                        editable="bottom">
                                        <list string="Proc√®s-verbaux">
                                            <field name="pv_filename" string="Nom du fichier"/>
                                            <field name="date_upload" string="Date d'envoi"/>
                                            <button name="action_download_pv" type="object" string="T√©l√©charger" class="btn-secondary"/>
                                        </list>
                                        <form string="Proc√®s-verbal">
                                            <sheet>
                                                <group>
                                                    <field name="pv_filename" string="Nom du fichier"/>
                                                    <field name="pv_file" widget="binary" filename="pv_filename" string="Fichier PV"/>
                                                </group>
                                                <footer>
                                                    <button string="Enregistrer" type="object" special="save" class="btn-primary"/>
                                                    <button string="Annuler" special="cancel" class="btn-secondary"/>
                                                </footer>
                                            </sheet>
                                        </form>
                                    </field>
                                </group>
                            </group>
                        </page>

                        <!-- üîπ Onglet 7: Enqu√™te satisfaction -->
                        <page string="Enqu√™te satisfaction">
                            <group>
                                <group string="Enqu√™te de satisfaction client">
                                    <field name="enquete_satisfaction_ids"
                                        context="{'default_sous_affaire_id': id}"
                                        editable="bottom">
                                        <list string="Enqu√™tes satisfaction">
                                            <field name="enquete_satisfaction_filename" string="Nom du fichier"/>
                                            <field name="date_upload" string="Date d'envoi"/>
                                            <button name="action_download_enquete" type="object" string="T√©l√©charger" class="btn-secondary"/>
                                        </list>
                                        <form string="Enqu√™te satisfaction">
                                            <sheet>
                                                <group>
                                                    <field name="enquete_satisfaction_filename" string="Nom du fichier"/>
                                                    <field name="enquete_satisfaction_file" widget="binary" filename="enquete_satisfaction_filename" string="Fichier enqu√™te satisfaction"/>
                                                </group>
                                                <footer>
                                                    <button string="Enregistrer" type="object" special="save" class="btn-primary"/>
                                                    <button string="Annuler" special="cancel" class="btn-secondary"/>
                                                </footer>
                                            </sheet>
                                        </form>
                                    </field>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>